# Template file for 'hosts-gen'
pkgname=hosts-gen
version=0.9
revision=1
build_style=gnu-makefile
hostmakedepends="git"
short_desc="Framework to generate /etc/hosts from various sources"
maintainer="mustaqim <mustaqim+void@pm.me>"
license="GPL-3.0-or-later"
homepage="http://r-36.net/scm/hosts-gen"
changelog="http://r-36.net/scm/hosts-gen/log.html"
patch_args="-Np1"

do_fetch() {
	git clone git://r-36.net/hosts-gen ${pkgname}-${version}
}

post_install() {
	vlicense LICENSE
	vbin examples/gethostszero
}
